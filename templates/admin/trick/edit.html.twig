{% extends "admin/base.html.twig" %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block body %}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('admin.tricks.index')}}">Tricks</a></li>
            <li class="breadcrumb-item active" aria-current="page">
                {% if trick is defined %}
                    {{ trick.title }}
                {% else %}
                    Création
                {% endif %}
            </li>
        </ol>
    </nav>
    {{ form_start(form) }}
    <div class="row">
        <div class="col-md-4 order-md-2 mb-4">
            <h3 class="d-flex justify-content-between align-items-center mb-3">
                <span class="text-muted">Gestion des médias</span>
            </h3>
            <ul class="list-group mb-3">
                <li class="list-group-item d-flex justify-content-between lh-condensed">
                    <div>
                        <h6 class="my-0 mb-2">Image de couverture</h6>
                        <!-- <small class="text-muted">Brief description</small> -->
                        {% if trick is defined %}
                            <img src="{{ asset('uploads/trick/'~trick.mainPicture) }}" class="img-fluid mb-2" alt="Responsive image">
                        {% endif %}
                        {{ form_widget(form.mainPicture) }}
                        {{ form_errors(form.mainPicture) }}
                    </div>
                </li>
                <li class="list-group-item d-flex justify-content-between lh-condensed">
                    <div>
                        {% if trick is defined %}
                            {% for picture in pictures %}
                                {{ form_label(form.pictures) }}
                                <img src="{{ asset('uploads/trick/'~picture.path) }}" class="img-fluid mb-2" alt="Responsive image">
                                {{ form_widget(form.pictures) }}
                                {{ form_errors(form.pictures) }}
                            {% endfor %}
                        {% endif %}
                        <!-- JS Collection d'images -->
                        <div class="pictures" data-prototype="{{ form_widget(form.pictures.vars.prototype)|e('html_attr') }}"></div>
                    </div>
                </li>
            </ul>
        </div>
        <div class="col-md-8 order-md-1">
            {% if trick is defined %}
                <h3 class="mb-3">Édition: {{ trick.title }}</h3>
                {% else %}
                <h3 class="mb-3">Création Trick</h3>
            {% endif %}
            <div class="row">
                <div class="col-md-8 mb-3">
                    {{ form_label(form.title) }}
                    {{ form_widget(form.title) }}
                    {{ form_errors(form.title) }}
                </div>
                <div class="col-md-4 mb-3">
                    {{ form_label(form.isValid) }}
                    {{ form_widget(form.isValid) }}
                    {{ form_errors(form.isValid) }}
                </div>
            </div>
            <div class="row">
                <div class="col-md-8 mb-3">
                    {{ form_label(form.description) }}
                    {{ form_widget(form.description) }}
                    {{ form_errors(form.description) }}
                </div>
                <div class="col-md-4 mb-3">
                    {{ form_label(form.categories) }}
                    {{ form_widget(form.categories) }}
                    {{ form_errors(form.categories) }}
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 mb-3">
                    {{ form_label(form.youtubeMovie) }}
                    {{ form_widget(form.youtubeMovie) }}
                    {{ form_errors(form.youtubeMovie) }}
                </div>
            </div>
            <hr class="mb-4">
            <div class="row">
                <div class="col-md-4 mb-3">
                    <button class="btn btn-success btn-lg btn-block" type="submit">Enregistrer</button>
                </div>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}

