{% extends "admin/base.html.twig" %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block body %}

    {{ form_start(form) }}
    <button type="submit" class="btn btn-primary">

        Save
    </button>
        <div class="row">
            <div class="col-md-6">
                {% if link is defined %}
                    <img src="{{ asset('uploads/trick/'~link) }}" alt="Image" class="img-thumbnail mb-2">
                  {% else %}
                      <img src="https://i1.wp.com/healthyclemsy.fr/wp-content/uploads/2016/05/placeholder-1.png?fit=1920%2C1280&ssl=1" alt="Image" class="img-thumbnail mb-2">
                {% endif %}
                {{ form_label(form.mainPicture) }}
                {{ form_widget(form.mainPicture) }}
                {{ form_errors(form.mainPicture) }}
            </div>
            <div class="col-md-12 mb-2">
                {{ form_label(form.title) }}
                {{ form_widget(form.title) }}
                {{ form_errors(form.title) }}
            </div>
            <div class="col-md-6 mb-2">
                {{ form_label(form.categories) }}
                {{ form_widget(form.categories) }}
                {{ form_errors(form.categories) }}
            </div>
            <div class="col-md-6 mb-2">
                {{ form_label(form.isValid) }}
                {{ form_widget(form.isValid) }}
                {{ form_errors(form.isValid) }}
            </div>
            <div class="col-md-6 mb-2">
                <div class="embed-responsive embed-responsive-16by9 mb-2">
                  {% if trick is defined %}
                      <iframe class="embed-responsive-item" src="{{ trick.youtubeMovie }}" allowfullscreen></iframe>
                  {% else %}
                      <iframe class="embed-responsive-item" src="https://youtube.com" allowfullscreen></iframe>
                  {% endif %}
                </div>
                {{ form_label(form.youtubeMovie) }}
                {{ form_widget(form.youtubeMovie) }}
                {{ form_errors(form.youtubeMovie) }}
            </div>
            <div class="col-md-6 mb-2">
                {{ form_label(form.description) }}
                {{ form_widget(form.description) }}
                {{ form_errors(form.description) }}
            </div>
            <!-- Collection Pictures -->
            <div class="col-md-12">
                <div class="">Collections d'images</div>
                <div class="">
                    <ul class="tags" data-prototype="{{ form_widget(form.pictures.vars.prototype)|e('html_attr') }}">
                    </ul>
                </div>
            </div>
        </div>
    {{ form_end(form) }}
{% endblock %}
