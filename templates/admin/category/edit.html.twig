{% extends "admin/base.html.twig" %}

{% block body %}
    <style>
        input:checked ~ .toggle__dot {
            transform: translateX(100%);
            background-color: #48bb78;
        }
    </style>

    <div class="w-full lg:w-4/5 p-8 mt-6 lg:mt-0 text-gray-900 leading-normal">

        <div class="col-span-6">
            {% for message in app.flashes('success') %}
                <div class="bg-green-200 border-l-4 border-green-500 text-green-800 p-4">
                    <p class="font-bold flex items-center"><i class="ri-check-double-line ri-xl mr-2"></i> Succès !</p>
                    <p>{{ message }}</p>
                </div>
            {% endfor %}
            {% for message in app.flashes('danger') %}
                <div class="bg-red-200 border-l-4 border-red-500 text-red-800 p-4">
                    <p class="font-bold flex items-center"><i class="ri-check-double-line ri-xl mr-2"></i> Erreur !</p>
                    <p>{{ message }}</p>
                </div>
            {% endfor %}
        </div>

        <header class="flex justify-between items-center">
            <h2 class="flex items-center text-2xl font-semibold leading-tight">
                <i class="ri-add-circle-line mr-2"></i> Ajout d'une Catégorie
            </h2>
        </header>

        <hr class="my-5">

        {{ form_start(form) }}
            {{ form_label(form.name) }}
            {{ form_widget(form.name) }}
            {{ form_errors(form.name) }}
            <div class="mt-3 col-span-6 flex justify-end">
                <input type="submit" value="Créer" class="py-4 bg-teal-500 text-white font-medium px-5 rounded hover:bg-teal-700 transition-all duration-300 ease-in-out flex items-center justify-center focus:shadow-outline focus:outline-none" />
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}