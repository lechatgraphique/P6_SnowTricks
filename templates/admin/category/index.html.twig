<div class="d-flex justify-content-end">
    {% include "admin/pagination.html.twig" %}
</div>
<table class="table bg-white">
    <thead class="bg-white">
    <tr class="text-uppercase">
        <th scope="col" class="font-weight-normal">Catégorie(s)</th>
        <th scope="col" class="font-weight-normal">Slug</th>
        <th scope="col" class="text-right align-middle font-weight-normal"><i class="ri-list-settings-line"></i></th>
    </tr>
    </thead>
    {% for category in categories %}
        <tbody>
        <tr>
            <th scope="row" class="align-middle">{{ category.name }}</th>
            <td class="align-middle font-weight-bold">{{ category.slug }}</td>
            <td class="align-middle text-right">
                <div class="btn-group" role="group" aria-label="Basic example">
                    <a href="{{ path("admin.category.edit", {slug: category.slug}) }}" class="btn btn-light d-flex items-center p-2">
                        <i class="ri-edit-2-line mr-2"></i>
                        Éditer
                    </a>
                    <a href="{{ path("admin.category.delete", {id: category.id}) }}" class="btn btn-danger d-flex items-center p-2">
                        <i class="ri-delete-bin-6-line mr-2"></i>
                        Supprimer
                    </a>
                </div>
            </td>
        </tr>

        </tbody>
    {% endfor %}
</table>