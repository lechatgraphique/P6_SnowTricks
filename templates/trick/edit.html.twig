{% extends 'base.html.twig' %}
{% block title %}SnowTricks - Editer un trick{% endblock %}

{% form_theme form 'trick/_collection.html.twig' %}

{% block body %}
    <div class="">
        <h1>Modifier le trick : {{ trick.name }}</h1>
        {{ form_start(form) }}

        {{ form_row(form.name) }}
        {{ form_row(form.description) }}
        {{ form_row(form.category) }}

        <div class="form-group">
            {{ form_label(form.mainPicture) }}
            <div class="row">
                <div class="col-sm-6">
                    {{ form_errors(form.mainPicture.file) }}
                    {{ form_widget(form.mainPicture.file) }}
                    {{ form_help(form.mainPicture.file) }}
                </div>
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.movie) }}
            <div class="row">
                <div class="col-sm-6">
                    {{ form_errors(form.movie) }}
                    {{ form_widget(form.movie) }}
                    {{ form_help(form.movie) }}
                </div>
            </div>
        </div>
        {{ form_row(form.pictures) }}

        <button type="submit" class="btn btn-success btn-lg col-12"><i class="fas fa-check"></i> Enregistrer les modifications !</button>

        {{ form_end(form) }}
    </div>
{% endblock %}
