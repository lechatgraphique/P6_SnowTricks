<div class="col mb-4">
    <div class="card h-100">
        <img src="https://so-sport.fr/wp-content/uploads/2018/09/snowboarder.jpg" class="card-img-top img-fluid" alt="..." height="120">
        <div class="card-body d-flex flex-column justify-content-between">
            <div>
                <h5 class="card-title">{{ trick.name }}</h5>
                <hr>
                <p class="card-text">{{ trick.description | u.truncate(70, '...') }}</p>
            </div>
            <hr>
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <a class="link" href="#" role="button">Voir le Trick</a>
                </div>
                {% if users is defined %}
                    <div>
                        <a class="btn btn-outline-primary" href="#" role="button"><i class="ri-edit-2-line"></i></a>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>