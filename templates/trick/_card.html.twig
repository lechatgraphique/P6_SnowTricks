<div class="col mb-4">
    <div class="card h-100">
        <img src="{{ asset('img/tricks/') }}{{ trick.mainPicture.name }}" class="card-img-top img-fluid" alt="..." height="120">
        <div class="card-body d-flex flex-column justify-content-between">
            <div>
                <h5 class="card-title">{{ trick.name }}</h5>
                <hr>
                <p class="card-text">{{ trick.description | u.truncate(70, '...') }}</p>
            </div>
            <hr>
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <a class="link" href="{{ path('trick.show', {'slug': trick.slug}) }}" role="button">Voir le Trick</a>
                </div>
                {% if app.user %}
                    <div>
                        <a class="btn btn-outline-primary" href="{{ path('trick.edit', {'slug': trick.slug}) }}" role="button"><i class="ri-edit-2-line"></i></a>
                        <a class="btn btn-outline-danger" href="{{ path('trick.delete', {'slug': trick.slug}) }}" role="button"><i class="ri-delete-bin-6-line"></i></a>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>