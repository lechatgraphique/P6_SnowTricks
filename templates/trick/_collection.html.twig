{% block _trick_images_widget %}
    <p>Ajouter des images pour illustrer votre trick !</p>

    {{ form_widget(form) }}

    <input type="hidden" id="widgets-counter-image" value="0">

    <div class="form-group">
        <button type="button" id="add-image" class="btn btn-info">Ajouter une image</button>
    </div>
{% endblock %}

{% block _trick_images_entry_row %}
    {{ form_widget(form) }}
{% endblock %}

{% block _trick_images_entry_widget %}
    <div class="form-group" id="block_{{ id }}">
        <div class="row">
            <div class="col-md-5">
                {{ form_widget(form.file)}}
            </div>
            <div class="col-md-2">
                <button type="button" data-action="delete" data-target="#block_{{id}}" class="btn btn-danger col-sm-12">X</button>
            </div>
        </div>
    </div>
{% endblock %}
