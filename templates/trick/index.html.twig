{% extends "base.html.twig" %}

{% block title %} Accueil SnowTricks {% endblock %}

{% block body %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    <div class="mt-5 row row-cols-1 row-cols-md-3">
        {% for trick in tricks %}
            {% include "trick/_card.html.twig" %}
        {% endfor %}
    </div>
    <div class="row justify-content-md-center">
        <div class="col-md-auto">
            <a id="loadMore" class="btn btn-primary btn-lg" href="#" role="button">Voir plus de Tricks</a>
        </div>
    </div>

{% endblock %}
