{% extends 'base.html.twig' %}
{% block title %}Snowtricks - Cr√©ation{% endblock %}

{% block body %}
    <div class="container mt-5 pt-5">
        {{ form_start(form) }}
            {{ form_row(form.name) }}
            {{ form_row(form.description) }}
            {{ form_row(form.category) }}
            <div class="form-group">
                {{ form_label(form.mainPicture) }}
                <div class="row">
                    <div class="col-sm-6">
                        {{ form_errors(form.mainPicture.file) }}
                        {{ form_widget(form.mainPicture.file) }}
                        {{ form_help(form.mainPicture.file) }}
                    </div>
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.movie) }}
                <div class="row">
                    <div class="col-sm-6">
                        {{ form_errors(form.movie) }}
                        {{ form_widget(form.movie) }}
                        {{ form_help(form.movie) }}
                    </div>
                </div>
            </div>
            <h3>Picutres</h3>
            <div class="tags" id="img_list" data-prototype="{{ form_widget(form.pictures.vars.prototype)|e('html_attr') }}">
                <div class="row">
                    {% for picture in form.pictures  %}
                        <div class="col-3">
                            <div class="card mb-3">
                                <div class="card-body">
                                    <div class="card-heading">
                                        <img src="{{ asset('img/tricks/'~picture.vars.value.name) }}" alt="your image" class="img-fluid mb-3 blah" style="max-height: 300px"/>
                                    </div>
                                    {{ form_row(picture) }}
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
            <button type="submit" class="btn btn-success btn-lg col-12"><i class="fas fa-check"></i> Enregistrer les modifications !</button>
        {{ form_end(form) }}
    </div>
{% endblock %}
